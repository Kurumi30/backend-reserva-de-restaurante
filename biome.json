{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"extends": [],
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "dist", "build"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"formatWithErrors": false,
		"indentWidth": 2,
		"lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"ignore": [],
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "all",
			"arrowParentheses": "asNeeded"
		}
	}
}
